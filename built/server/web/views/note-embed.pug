doctype html

html
	head
		meta(charset="UTF-8")
		title Misskey
		style.
			body, video, audio {
				width:100%;
				height: 100%;
				overflow: hidden;
				position: absolute;
			}

	body
		if video
			video(src=video type=type controls autoplay=autoplay)
		if audio
			audio(src=audio type=type controls autoplay=autoplay)
